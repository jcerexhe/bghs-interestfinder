<%= simple_form_for(@interest_group) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>New Interest Group</h1>
      <div class="form-inputs">
        <%= f.input :name, placeholder: 'Name', label: false %>
        <%= f.input :description, placeholder: 'Description', label: false %>
        <%= f.input :image, placeholder: 'Image', label: false %>
      </div>

      <div class="row">
        <div class="col-xs-6">
          <div class="form-actions">
            <%= f.button :submit, 'Create!', class: 'btn btn-primary btn-block' %>
          </div>
        </div>
        <div class="col-xs-6">
          <%= link_to 'Back', interest_groups_path, class: 'btn btn-default btn-block' %>
        </div>
    </div>
  </div>
<% end %>
