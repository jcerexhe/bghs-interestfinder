<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :interest_group_id, :as => :hidden, :input_html => { :value => params[:interest_group_id] } %>
    <%= f.input :name %>
    <%= f.input :time %>
    <%= f.input :date %>
    <%= f.input :description %>
    <%= f.input :location %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
